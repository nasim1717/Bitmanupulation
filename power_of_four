#include<bits/stdc++.h>
using namespace std;
bool pow_of_4(long long n){
    if(n<=0)
        return false;
    while(n!=1){
        if(n%4!=0) return false;
        n/=4;
    }
    return true;
}
int main(){
  long long i,j,n;
  cin>>n;
  bool x = pow_of_4(n);
  if(x==1)
    cout<<"true"<<endl;
  else
    cout<<"false"<<endl;
return 0;
}


